{
  "compilerOptions": {
    "target": "ES2018", 
    "module": "ESNext", 
    "lib": [],
    "declaration": true,                      
    "declarationMap": true,
    "outDir": "./dist/esm",
    "removeComments": true,
    "strict": true,                           
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}